{
  "name": "energy-based-ai-life-manager",
  "version": "1.0.0",
  "description": "AI Life Manager that plans a user's day based on energy, not just deadlines",
  "private": true,
  "workspaces": [
    "shared",
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build --workspaces",
    "install:all": "npm install && npm install --workspaces"
  }
}
